
html 
    head 
        link(type="text/css" rel="stylesheet", href="/userForm.css")
        title=title 
    body 
        div(class="center")
            div(class="center_h1")
                h1
                    message=message
            div(class="form")        
                form(action=route method="POST")
                    div(class="inputs") 
                        label(for="name")="Nome do filho"
                        input(type="text" name="name" id="name" value=childrenName  required)
                    div(class="inputs") 
                        label(for="age")="Idade do filho" 
                        input(type="number" name="age" id="age" value=childrenAge required)
                    div(class="inputs_button") 
                        button(type="submit")=btn1 
                